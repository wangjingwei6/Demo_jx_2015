<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app1="http://schemas.android.com/apk/res/com.ninexiu.wjw"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/charge_title_layout"
        layout="@layout/title_tab_bar" />

    <com.qnmlgb.view.ResizeLayout
        android:id="@+id/fl_resize_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_bg"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_bg"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <View
                        android:id="@+id/charge_rod"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/charge_title_rod" />

                    <LinearLayout
                        android:id="@+id/charge_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/charge_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <View
                                android:layout_width="3dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:background="#ff0000" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:gravity="center_vertical"
                                android:text="充值金额"
                                android:textColor="#343434"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/charge_content_dashed_h" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_one_charge_thiry"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="￥10"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/charge_vertical_line" />

                            <TextView
                                android:id="@+id/tv_one_charge_fifty"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="￥50"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/charge_vertical_line" />

                            <TextView
                                android:id="@+id/tv_one_charge_one_hundred"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="￥100"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/charge_content_dashed_h" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp" >

                            <TextView
                                android:id="@+id/tv_one_charge_thiry_hundred"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="￥300"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/charge_vertical_line" />

                            <TextView
                                android:id="@+id/tv_one_charge_five_hundred"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="￥500"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/charge_vertical_line" />

                            <TextView
                                android:id="@+id/tv_one_charge_one_thousand"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="￥1000"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/charge_content_dashed_h" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/white_bg" />

                    <View
                        android:id="@+id/charge_rod_top"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/charge_title_rod" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="19dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >

                    <EditText
                        android:id="@+id/charge_et_input"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/charge_input"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="其他金额"
                        android:inputType="number"
                        android:paddingBottom="9dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="13sp" >
                    </EditText>

                    <LinearLayout
                        android:id="@+id/charge_close_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <ImageButton
                            android:id="@+id/charge_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/charge_delete" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/zhifu"
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/red_bt_01"
                    android:padding="6dp"
                    android:text="确认、去支付"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="48dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="提示:"
                        android:textColor="@color/text_color_detail"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="1.首次充值免费领取VIP会员豪华大礼包"
                        android:textColor="@color/text_color_detail"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2.支付宝 手机支付更快捷"
                        android:textColor="@color/text_color_detail"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="3.人民币和九币的兑换比例为1:1000"
                        android:textColor="@color/text_color_detail"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="4.支付遇到问题 请联系帅哥QQ:"
                            android:textColor="@color/text_color_detail"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/qq_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="464933600"
                            android:textColor="@color/hong"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/white_bg" />
            </LinearLayout>
        </ScrollView>
    </com.qnmlgb.view.ResizeLayout>

</LinearLayout>