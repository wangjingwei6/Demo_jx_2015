<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="184dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pop_item_bg"
            android:orientation="vertical" >
            <ImageView 
                android:layout_width="62dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/remind_user_pop_iconbg"
                />
            <TextView 
                android:id="@+id/tv_remind_user_info"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="悄悄想一会0.0\n如果你也开心,愿意做我的女友嘛?"
                android:textColor="#E56ba4"
                android:textSize="12sp"
                android:gravity="center"
                />
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="~O(∩_∩)O~"
                android:textColor="#77E91C"
                android:textSize="14sp"
                />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal" >
                  
                    <Button
                        android:id="@+id/remind_user_bt_01"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:text="取消"
                        android:textColor="#999999"
                        android:textSize="16sp"
                        android:background="@drawable/white_bt_01" />
                    
                      <Button
                        android:id="@+id/remind_user_bt_02"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="确定"
                        android:textColor="@color/hong"
                        android:textSize="16sp"
                        android:background="@drawable/red_bt_03" />
                </LinearLayout>
            </LinearLayout>
        
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="204dp" >

            <ImageView
                android:id="@+id/remind_user_type_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/heart4" />
        </RelativeLayout>
       
    </FrameLayout>

</LinearLayout>