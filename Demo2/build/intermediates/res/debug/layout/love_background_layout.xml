<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love_backgroundimg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/showloveimg"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_margin="2dp"
                android:background="@drawable/flowermore2"
                android:scaleType="fitXY" />

            <include
                android:id="@+id/custom_progress"
                layout="@layout/ns_loading_two" 
                android:visibility="gone"
                />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/cicle_shape"
        android:gravity="center"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="12dp"
        android:background="#65F9FF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/loveimg"
            android:text="经纬"
            android:textColor="#FDE700"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/loveimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/heart6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/loveimg"
            android:text="欣欣"
            android:textColor="#E56ba4"
            android:textSize="24sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_marginTop="8dp"
        android:background="#FDE700" />

    <com.qnmlgb.view.MarqueeText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:text="  曾经有一份热乎的狗头放在我面前，我没有享用，等我饿了的时候才后悔莫及，人世间最痛苦的事莫过于此。
        				如果上天能够给我一个再来一次的机会，
        			我会对那个狗头说三个字：王丽欣。如果非要在这份爱上加上一个期限，我希望是……八分熟！"
        android:textColor="#f202f4"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#FDE700" />

    <com.qnmlgb.view.MarqueeText
        android:id="@+id/tv_ljz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="56dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:text="你在我心里，打了死结  绑住孤单，在我的世界  你带走的快乐 我没了知觉 一个人人面对每个日夜	你在我心里 打了死结  绑住孤单 在我的世界  
        找不到你的我  已失去一切  我们的爱已无法脱险  你打了死结"
        android:textColor="#Ec3395"
        android:visibility="gone" />

    <com.qnmlgb.view.MarqueeText
        android:id="@+id/tv_ahm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="56dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:text="Oh baby 爱爱爱你这一生只爱你 闭上眼睛听见爱的花语   用白色的蜡笔画一场婚礼   度过每个四季永不分离		Oh baby  愿愿 愿意我什么都愿意  抱紧我别错过爱的花期  你手心里握着彩色的秘密  让我们来好好珍惜"
        android:textColor="#f202f4" />

