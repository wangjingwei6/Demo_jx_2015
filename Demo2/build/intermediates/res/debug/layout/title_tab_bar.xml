<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ns_title_height"
    android:background="@color/hong" >

    <com.qnmlgb.view.RippleImageButton
        android:id="@+id/left_btn"
        android:layout_width="@dimen/ns_title_height"
        android:layout_height="@dimen/ns_title_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@null"
        android:src="@drawable/tab_back_second" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <com.qnmlgb.view.RippleImageButton
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ns_title_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/title_right_color"
        android:visibility="gone" />

    <View
        android:id="@+id/line_shadow"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ns_livehall_line_shadow_shape"
        android:visibility="visible" />


</RelativeLayout><!-- From: file:/E:/MARS/Demo2/res/layout/title_tab_bar.xml -->