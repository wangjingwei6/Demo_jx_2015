<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/guide_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/btn_start_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dip"
        android:background="@drawable/guide_btn"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_label_positon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" 
        >

        <View
            android:id="@+id/guide_point1"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/point_red" />
         <View
            android:id="@+id/guide_point2"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/point_normal" 
            android:layout_marginLeft="10dp"
            />
          <View
            android:id="@+id/guide_point3"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/point_normal" 
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

