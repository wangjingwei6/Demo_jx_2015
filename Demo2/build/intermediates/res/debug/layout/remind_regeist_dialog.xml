<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="184dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pop_item_bg"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="62dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/remind_user_pop_iconbg" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="~O(∩_∩)O~"
                android:textColor="#77E91C"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_white_shape"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_accout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/login_account" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1.0sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/img_accout"
                    android:background="@color/hong_girl" />

                <EditText
                    android:id="@+id/regeist_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/img_accout"
                    android:background="@null"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789*()_"
                    android:hint="请输入您的用户名"
                    android:maxLength="16"
                    android:paddingTop="4dp"
                    android:textColor="@color/login_account_3.0"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_white_shape"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/login_password" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1.0sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/img_password"
                    android:background="@color/hong_girl" />

                <EditText
                    android:id="@+id/regeist_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/img_password"
                    android:background="@null"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:paddingTop="4dp"
                    android:textColor="@color/login_account_3.0"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/regeist_remind_user_bt_01"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_bt_01"
                    android:text="取消"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/regeist_remind_user_bt_02"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_bt_03"
                    android:text="注册"
                    android:textColor="@color/hong"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="204dp" >

            <ImageView
                android:id="@+id/remind_user_type_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/heart4" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout><!-- From: file:/E:/MARS/Demo2/res/layout/remind_regeist_dialog.xml -->