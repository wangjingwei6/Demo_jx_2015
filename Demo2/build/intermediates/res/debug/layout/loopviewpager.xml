<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loop_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_404"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_little_ss" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:id="@+id/loop_point1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/point_white" />

            <View
                android:id="@+id/loop_point2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/point_normal" />

            <View
                android:id="@+id/loop_point3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/point_normal" />

            <View
                android:id="@+id/loop_point4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/point_normal" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/MARS/Demo2/res/layout/loopviewpager.xml -->