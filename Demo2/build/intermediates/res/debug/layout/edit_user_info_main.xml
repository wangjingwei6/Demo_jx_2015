<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ninexiu.wjw"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ns_main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/edit_userinfo_title_layout"
        layout="@layout/title_tab_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <RelativeLayout
            android:id="@+id/layout_head"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:background="@color/white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="头像"
                android:textSize="18sp" />

            <com.qnmlgb.view.CircularImageView
                android:id="@+id/iv_user_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_default_avatar"
                app:border="true"
                app:border_color="@color/ns_edit_user_avatar_stroke_color"
                app:border_width="2dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <RelativeLayout
            android:id="@+id/layout_nickname"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:background="@color/white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="姓名"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:paddingRight="28dp"
                android:background="@null"
                android:maxLength="7"
                android:hint="未填写"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.25dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.25dp"
            android:layout_marginTop="6dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <RelativeLayout
            android:id="@+id/layout_sex"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:background="@color/white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="性别"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:text="XXX"
                android:textColor="@color/gray" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="6dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:background="@color/white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="地区"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:text="XXX"
                android:textColor="@color/gray" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/ns_edit_user_info_setting_line" />

        <Button
            android:id="@+id/bt_modify_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/red_bt_01"
            android:padding="6dp"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/MARS/Demo2/res/layout/edit_user_info_main.xml -->