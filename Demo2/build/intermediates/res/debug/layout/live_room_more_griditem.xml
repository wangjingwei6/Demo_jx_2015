<?xml version="1.0" encoding="utf-8"?>
<com.qnmlgb.view.ScaleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:paddingTop="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:src="@drawable/more_order" />

        <TextView
            android:id="@+id/numText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_num"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="点歌"
        android:textSize="12dip" />

</com.qnmlgb.view.ScaleLinearLayout><!-- From: file:/E:/MARS/Demo2/res/layout/live_room_more_griditem.xml -->